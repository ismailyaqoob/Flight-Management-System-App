<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andtoid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="8dp"
    android:background="@color/Background"
    andtoid:cardCornerRadius="8dp"
    andtoid:cardElevation="8dp"
    android:id="@+id/cardview_VC_ticketdetail"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_VC_ticketnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/button_VC_deletebutton"
            android:gravity="fill"
            android:padding="10dp"
            android:text="Ticket Number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_VC_deletebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_rounded"
            android:src="@drawable/round_delete_white_18"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>